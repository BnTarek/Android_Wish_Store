<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/order_btn"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_padding"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thumbnail_hight"
                android:layout_margin="@dimen/small_padding"
                tools:src="@drawable/cupcake" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_padding"
                android:textSize="@dimen/title"
                tools:text="@string/cupcake_description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_padding"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decrease_btn"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="@dimen/title" />

                <TextView
                    android:id="@+id/quantity_et"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:layout_marginRight="@dimen/small_padding"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/title" />

                <Button
                    android:id="@+id/increase_btn"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="@dimen/title" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/fast_shipping_cb"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="@dimen/small_padding"
                android:text="Fast shipping"
                android:textSize="@dimen/title" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/order_btn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:text="@string/order"
        android:textSize="@dimen/title" />
</RelativeLayout>
